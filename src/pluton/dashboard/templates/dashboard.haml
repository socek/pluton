-extends "pluton.application:templates/main.haml"
-block content
  %div.col-lg-12
    %h1.text-center
      Endpoints&nbsp;
      %a.glyphicon.glyphicon-plus-sign href="{{route_path('endpoints:create')}}" aria-hidden="true" title="Create"

    %table.table.table-striped.table-bordered.table-hover.table-condensed
      %thead
        %th
          Name
        %th
          Status
        %th
          Actions
      %tbody
        -for endpoint in endpoints:
          =endpoint()

